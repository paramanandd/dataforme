<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="BookDetail" class="com.cybage.BookDetails" init-method="initIt" destroy-method="cleanUp">
		  <property name="book" ref="books"/>
		<property name="action" value="purchase"/>
		<property name="type" value="345"/>
	</bean>
	
	
	<bean id="books" class="com.cybage.Book" >
		<property name="bookId" value="129"></property>
		<property name="bookName" value="JAva"></property>
		<property name="Author" value="Gosling"></property>

	</bean>

</beans>